@model OneTouchElectronix.Models.MainCategory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Standard</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        @Html.HiddenFor( m => m.MainCategoryId)

        <div class="form-group">
            @Html.LabelFor(m => m.MainCategoryName, htmlAttributes : new { @class = "control-label col-md-2"})

            <div class="col-md-10">
                @Html.EditorFor(m => m.MainCategoryName, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(m => m.MainCategoryName, "", new { @class ="text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

