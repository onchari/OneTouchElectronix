@model OneTouchElectronix.Models.MainCategory
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Main Category</h4>
        @Html.ValidationSummary(true,"", new { @class = "text-danger"})
        
        <div class="form-group">
            @Html.LabelFor(m => m.MainCategoryName, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.MainCategoryName, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.MainCategoryName, "", new { @class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" >
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>

}

