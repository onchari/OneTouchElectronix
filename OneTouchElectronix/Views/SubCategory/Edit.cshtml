@model OneTouchElectronix.Models.SubCategory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h3>Sub Categories</h3>
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        @Html.HiddenFor(m => m.SubCategoryId)

        <div class="form-group">
            @Html.LabelFor(m => m.SubCategoryName, htmlAttributes: new { @class = "control-label col-md-2"})
            <div>
                @Html.EditorFor(m => m.SubCategoryName, new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(m => m.SubCategoryName, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MainCategoryId, "MainCategoryId", htmlAttributes : new { @class = "control-label col-md-2"})

            <div class="col-md-10">
                @Html.DropDownList("MainCategoryId", null, htmlAttributes : new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.MainCategoryId, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit"  value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to the list", "Index")
</div>