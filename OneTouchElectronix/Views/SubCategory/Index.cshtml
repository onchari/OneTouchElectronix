@model IEnumerable<OneTouchElectronix.Models.SubCategory>
@{
    ViewBag.Title = "SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SubCategory</h2>

<p>
    @Html.ActionLink("Create SubCategory", "Create")
</p>

<table class="table table-striped table-bordered table-hover table-condensed" >
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.SubCategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.SubCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.SubCategoryDescription)
        </th>
        <th></th>

    </tr>

@foreach (var subcategory in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(m => subcategory.SubCategoryId)
        </td>
        <td>
            @Html.DisplayFor(m => subcategory.SubCategoryName)
        </td>
        <td>
            @Html.DisplayFor(m => subcategory.SubCategoryDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = subcategory.SubCategoryId}) |
            @Html.ActionLink("Details", "Details", new {  id = subcategory.SubCategoryId})|
            @Html.ActionLink("Delete", "Delete", new { id = subcategory.SubCategoryId})
        </td>
    </tr>

}

</table>